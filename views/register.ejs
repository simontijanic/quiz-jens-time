<%- include('partials/header') %>

<div class="container mt-5">
    <h2>Registrer deg</h2>
    <form action="/register" method="POST">
        <div class="mb-3">
            <label for="fornavn" class="form-label">Fornavn</label>
            <input type="text" class="form-control" id="fornavn" name="fornavn" required>
            <small class="form-text text-muted">Skriv inn ditt fornavn (påkrevd).</small>
        </div>
        <div class="mb-3">
            <label for="etternavn" class="form-label">Etternavn</label>
            <input type="text" class="form-control" id="etternavn" name="etternavn" required>
            <small class="form-text text-muted">Skriv inn ditt etternavn (påkrevd).</small>
        </div>
        <div class="mb-3">
            <label for="epost" class="form-label">E-post</label>
            <input type="email" class="form-control" id="epost" name="epost" required>
            <small class="form-text text-muted">Skriv inn en gyldig e-postadresse (påkrevd og må være unik).</small>
        </div>
        <div class="mb-3">
            <label for="passord" class="form-label">Passord</label>
            <input type="password" class="form-control" id="passord" name="passord" required>
            <small class="form-text text-muted">Passordet må fylles ut. (Minimum 6 tegn anbefales, men ingen spesielle krav i modellen.)</small>
        </div>
        <button type="submit" class="btn btn-primary">Registrer</button>
    </form>
</div>

<%- include('partials/footer') %>